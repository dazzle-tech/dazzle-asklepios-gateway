<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="00000000000020" author="hanan253yahya">

    <createTable tableName="department_medical_sheets_nurse_visibility">
      <column name="id" type="bigint" autoIncrement="true" startWith="5000">
        <constraints nullable="false" primaryKey="true"/>
      </column>

      <column name="department_id" type="bigint">
        <constraints nullable="false"/>
      </column>

      <column name="medical_sheet" type="varchar(100)">
        <constraints nullable="false"/>
      </column>

      <column name="created_by" type="varchar(50)"/>
      <column name="created_date" type="timestamp"/>
      <column name="last_modified_by" type="varchar(50)"/>
      <column name="last_modified_date" type="timestamp"/>
    </createTable>

    <addForeignKeyConstraint
      baseTableName="department_medical_sheets_nurse_visibility"
      baseColumnNames="department_id"
      referencedTableName="department"
      referencedColumnNames="id"
      constraintName="fk_dept_medical-nurse_visibility_department"/>
    <addUniqueConstraint
      tableName="department_medical_sheets_nurse_visibility"
      columnNames="department_id, medical_sheet"
      constraintName="uk_department_medical_sheets_nurse_visibility_dept_sheet"/>

    <dropDefaultValue tableName="department_medical_sheets_nurse_visibility" columnName="created_date" columnDataType="${datetimeType}"/>

  </changeSet>

</databaseChangeLog>
