<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


    <changeSet id="00000000000008" author="hanan">
        <createTable tableName="module" >
            <column name="id" type="bigint" autoIncrement="true" startWith="1500">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
          <column name="icon_image_path" type="text"/>
          <column name="view_order" type="int"/>

        </createTable>

        <createTable tableName="screen">
            <column name="id" type="bigint" autoIncrement="true" startWith="1500">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="module_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="icon_image_path" type="TEXT"/>
            <column name="view_order" type="SMALLINT" defaultValueNumeric="0"/>
            <column name="nav_path" type="VARCHAR(255)"/>

        </createTable>


        <addUniqueConstraint tableName="screen"
                             columnNames="module_id, name"
                             constraintName="uq_module_screen_name"/>


        <addForeignKeyConstraint baseTableName="screen"
                                 baseColumnNames="module_id"
                                 referencedTableName="module"
                                 referencedColumnNames="id"
                                 constraintName="fk_screen_module"/>
    </changeSet>

</databaseChangeLog>
