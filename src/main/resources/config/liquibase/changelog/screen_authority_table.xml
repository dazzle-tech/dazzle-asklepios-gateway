<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="00000000000009" author="hanan">
    <createTable tableName="screen_authority">
      <column name="screen_id" type="bigint">
        <constraints nullable="false"/>
      </column>

      <column name="authority_name" type="varchar(50)">
        <constraints nullable="false"/>
      </column>

      <column name="operation" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey tableName="screen_authority"
                   columnNames="screen_id, authority_name, operation"
                   constraintName="pk_screen_auth"/>

    <addForeignKeyConstraint baseTableName="screen_authority"
                             baseColumnNames="screen_id"
                             referencedTableName="screen"
                             referencedColumnNames="id"
                             constraintName="fk_screen_auth_screen"
                             onDelete="CASCADE"/>

    <addForeignKeyConstraint baseTableName="screen_authority"
                             baseColumnNames="authority_name"
                             referencedTableName="authority"
                             referencedColumnNames="name"
                             constraintName="fk_screen_auth_authority"
                             onDelete="CASCADE"/>
  </changeSet>

</databaseChangeLog>
