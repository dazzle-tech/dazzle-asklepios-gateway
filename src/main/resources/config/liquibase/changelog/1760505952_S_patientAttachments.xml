<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="00000000000027" author="Sondos">

    <createTable tableName="patient_attachments">
      <column name="id" type="BIGINT"  autoIncrement="true" startWith="5000">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="patient_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="created_by" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="space_key" type="varchar(500)">
        <constraints nullable="false"/>
      </column>
      <column name="filename" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="mime_type" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="size_bytes" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="created_date" type="TIMESTAMPTZ" defaultValueComputed="now()">
        <constraints nullable="false"/>
      </column>
      <column name="deleted_at" type="TIMESTAMPTZ"/>
      <column name="type" type="nvarchar(100)">
      </column>
      <column name="details" type="TEXT">
      </column>
      <column name="source" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="last_modified_by" type="varchar(50)"/>
      <column name="last_modified_date" type="timestamp"/>
    </createTable>

    <addUniqueConstraint
      tableName="patient_attachments"
      columnNames="space_key"
      constraintName="uq_pa_space_key"/>

    <sql>
      ALTER TABLE patient_attachments
        ADD CONSTRAINT ck_pa_size_bytes_max_50mb
          CHECK (size_bytes &lt;= 52428800);
    </sql>

    <createIndex tableName="patient_attachments" indexName="idx_pa_patient">
      <column name="patient_id"/>
    </createIndex>

    <sql>
      CREATE INDEX idx_pa_not_deleted
        ON patient_attachments (id) WHERE deleted_at IS NULL;
    </sql>

    <addUniqueConstraint
      tableName="patient_attachments"
      columnNames="patient_id, space_key"
      constraintName="uq_pa_patient_space"/>

    <!-- TODO: Add foreign key  with patient table after create it:
       <addForeignKeyConstraint
        baseTableName="patient_attachments"
        baseColumnNames="patient_id"
        referencedTableName="patients"
        referencedColumnNames="id"
        constraintName="fk_pa_patient"
        onDelete="CASCADE"/>
    -->


  </changeSet>


</databaseChangeLog>
