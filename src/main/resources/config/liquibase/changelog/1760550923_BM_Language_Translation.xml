<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="BM0000000000011" author="bushra.mashaiekh">

    <createTable tableName="language_translation" >
      <column name="id" type="bigint" autoIncrement="true" startWith="1">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="lang_key" type="varchar(50)">
        <constraints nullable="false"/>
      </column>

      <column name="translation_key" type="varchar(150)">
        <constraints nullable="false"/>
      </column>

      <column name="translation_text" type="text"/>

      <column name="verified" type="boolean" defaultValueBoolean="false">
        <constraints nullable="false"/>
      </column>
      <column name="translated" type="boolean" defaultValueBoolean="false">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Ensure each (lang_key, translation_key) pair is unique -->
    <addUniqueConstraint
      tableName="language_translation"
      columnNames="lang_key, translation_key"
      constraintName="uq_lang_translation_key"/>

    <!-- FK to language(lang_key) -->
    <addForeignKeyConstraint
      baseTableName="language_translation"
      baseColumnNames="lang_key"
      referencedTableName="language"
      referencedColumnNames="lang_key"
      constraintName="fk_translation_language"/>

  </changeSet>
</databaseChangeLog>
