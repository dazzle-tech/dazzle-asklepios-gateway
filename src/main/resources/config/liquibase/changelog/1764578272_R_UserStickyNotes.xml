<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="R00000000000003" author="Rawan-Yahya200">

    <createTable tableName="user_sticky_notes">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>

      <column name="user_id" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="note" type="text">
        <constraints nullable="false"/>
      </column>



      <column name="priority" type="varchar(50)">
        <constraints nullable="false"/>
      </column>

      <column name="priority_order" type="numeric">
        <constraints nullable="false"/>
      </column>




      <column name="color" type="varchar(30)" />

      <column name="created_date" type="timestamp"/>
      <column name="created_by" type="varchar(50)"/>
      <column name="last_modified_by" type="varchar(50)"/>
      <column name="last_modified_date" type="timestamp"/>
    </createTable>

    <addForeignKeyConstraint
      baseTableName="user_sticky_notes"
      baseColumnNames="user_id"
      referencedTableName="app_user"
      referencedColumnNames="id"
      constraintName="fk_user_sticky_notes"/>


  </changeSet>
</databaseChangeLog>
