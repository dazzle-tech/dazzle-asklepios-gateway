<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="BM0000000000018" author="BushraMashaiekh">
    <createTable tableName="warehouse_user">
      <column name="id" type="bigint" autoIncrement="true" startWith="1">
        <constraints primaryKey="true" nullable="false" primaryKeyName="pk_warehouse_user"/>
      </column>
      <column name="warehouse_id" type="bigint">
        <constraints nullable="false" foreignKeyName="fk_warehouse" referencedTableName="catalog" referencedColumnNames="id"/>
      </column>
      <column name="user_id" type="bigint">
        <constraints nullable="false" foreignKeyName="fk_user_warehouse" referencedTableName="catalog" referencedColumnNames="id"/>
      </column>
      <column name="created_by" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="created_date" type="timestamp" defaultValueComputed="now()">
        <constraints nullable="false"/>
      </column>
      <column name="last_modified_by" type="varchar(50)"/>
      <column name="last_modified_date" type="timestamp"/>
    </createTable>

    <addUniqueConstraint
      tableName="warehouse_user"
      columnNames="user_id,warehouse_id"
      constraintName="uq_user_warehouse"/>

    <addForeignKeyConstraint
      baseTableName="warehouse_user"
      baseColumnNames="warehouse_id"
      referencedTableName="warehouse"
      referencedColumnNames="id"
      constraintName="fk_warehouse_warehouse_user"
      deferrable="false" initiallyDeferred="false"/>

  </changeSet>
</databaseChangeLog>
