<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="BM0000000000019" author="BushraMashaiekh">

    <createSequence
      sequenceName="billing_invoice_number_seq"
      startValue="1"
      incrementBy="1"/>

    <createTable tableName="billing_invoice">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

     <column name="invoice_number"
              type="varchar(50)"
              defaultValueComputed="('INV' || lpad(nextval('billing_invoice_number_seq')::text, 6, '0'))">
        <constraints nullable="false" unique="true"/>
      </column>

      <column name="patient_key" type="varchar(50)"/>
      <column name="encounter_key" type="varchar(50)"/>
      <column name="facility_id" type="bigint">
        <constraints nullable="false"
                     foreignKeyName="fk_billing_invoice_facility"
                     references="facility(id)"/>
      </column>

      <column name="status" type="varchar(50)">
        <constraints nullable="false"/>
      </column>

      <column name="total_amount" type="numeric(18,2)">
        <constraints nullable="false"/>
      </column>

      <column name="paid_amount" type="numeric(18,2)" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>

      <column name="balance_amount" type="numeric(18,2)" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>

      <column name="currency" type="varchar(10)"/>

      <column name="created_by" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="created_date" type="timestamp"/>
      <column name="last_modified_by" type="varchar(50)"/>
      <column name="last_modified_date" type="timestamp"/>
    </createTable>

    <dropDefaultValue tableName="billing_invoice"
                      columnName="created_date"
                      columnDataType="timestamp"/>
  </changeSet>

</databaseChangeLog>
