<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="bs000000000007" author="batool">
    <createTable tableName="cdt_code">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="code" type="varchar(20)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="description" type="varchar(500)">
        <constraints nullable="false"/>
      </column>
      <column name="class" type="varchar(100)">
        <constraints nullable="false"/>
      </column>
      <column name="is_active" type="boolean" defaultValueBoolean="true">
        <constraints nullable="false"/>
      </column>
      <column name="last_updated" type="timestamp" defaultValueDate="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addUniqueConstraint
      tableName="cdt_code"
      columnNames="code"
      constraintName="uk_cdt_code_unique_code"/>
  </changeSet>
</databaseChangeLog>
