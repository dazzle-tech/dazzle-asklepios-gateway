<!-- db/changelog/xxxx_role_screen.xml -->
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="000000000000015" author="hanan253yahya">
    <createTable tableName="role_screen">

      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="role_id" type="bigint">
        <constraints nullable="false"/>
      </column>

      <column name="screen" type="varchar(100)">
        <constraints nullable="false"/>
      </column>

      <column name="operation" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
    </createTable>


    <addPrimaryKey tableName="role_screen"
                   columnNames="role_id, screen"
                   constraintName="pk_role_screen"/>


    <addForeignKeyConstraint baseTableName="role_screen"
                             baseColumnNames="role_id"
                             referencedTableName="role"
                             referencedColumnNames="id"
                             constraintName="fk_role_screen_role"/>


    <addUniqueConstraint tableName="role_screen"
                         columnNames="role_id, screen, operation"
                         constraintName="uq_role_screen"/>


    <createIndex tableName="role_screen" indexName="idx_role_screen_role">
      <column name="role_id"/>
    </createIndex>


  </changeSet>
</databaseChangeLog>
