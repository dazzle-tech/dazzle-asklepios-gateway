<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="2025-10-22-create-icd10-table" author="hanan">

    <createTable tableName="icd10_code">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="code" type="varchar(20)">
        <constraints nullable="false" unique="true"/>
      </column>

      <column name="description" type="varchar(500)">
        <constraints nullable="false"/>
      </column>

      <column name="version" type="varchar(20)">
        <constraints nullable="true"/>
      </column>

      <column name="is_active" type="boolean" defaultValueBoolean="true">
        <constraints nullable="false"/>
      </column>


      <column name="last_updated" type="timestamp" defaultValueDate="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Optional: index for fast lookups -->
    <createIndex indexName="idx_icd10_code_code" tableName="icd10_code">
      <column name="code"/>
    </createIndex>

  </changeSet>

</databaseChangeLog>
