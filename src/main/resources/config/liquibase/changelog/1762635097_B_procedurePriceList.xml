<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet id="bs000000000011" author="batool">
    <createTable tableName="procedure_price_list">
      <column name="id" type="bigint" autoIncrement="true" startWith="3000">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="procedure_id" type="bigint">
        <constraints nullable="false"
                     foreignKeyName="fk_procedurepricelist_procedure"
                     references="procedure(id)"/>
      </column>

      <column name="price" type="decimal(19,2)">
        <constraints nullable="false"/>
      </column>

      <column name="currency" type="varchar(10)">
        <constraints nullable="false"/>
      </column>

      <column name="created_by" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="created_date" type="timestamp"/>
      <column name="last_modified_by" type="varchar(50)"/>
      <column name="last_modified_date" type="timestamp"/>
    </createTable>

    <dropDefaultValue tableName="procedure_price_list"
                      columnName="created_date"
                      columnDataType="timestamp"/>

    <addUniqueConstraint
      tableName="procedure_price_list"
      columnNames="procedure_id, currency, price"
      constraintName="uk_procedurepricelist_procedure_currency_price"/>

    <createIndex tableName="procedure_price_list" indexName="idx_procedurepricelist_procedure">
      <column name="procedure_id"/>
    </createIndex>

    <createIndex tableName="procedure_price_list" indexName="idx_procedurepricelist_currency">
      <column name="currency"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>
