<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="BM0000000000023" author="BushraMashaiekh">
    <createTable tableName="patient_follow_up">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="patient_key" type="varchar(50)">
        <constraints nullable="false"/>
      </column>

      <column name="encounter_key" type="varchar(50)">
        <constraints nullable="false"/>
      </column>

      <column name="city" type="varchar(100)"/>

      <column name="facility_id" type="bigint">
        <constraints nullable="false"
                     foreignKeyName="fk_patient_follow_up_facility"
                     references="facility(id)"/>
      </column>

      <column name="resource_type_id" type="bigint"/>
      <column name="resource_id" type="bigint"/>

      <column name="visit_type" type="varchar(30)">
        <constraints nullable="false"/>
      </column>

      <column name="status" type="varchar(30)">
        <constraints nullable="false"/>
      </column>

      <column name="created_by" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="created_date" type="timestamp"/>

      <column name="last_modified_by" type="varchar(50)"/>
      <column name="last_modified_date" type="timestamp"/>
    </createTable>

    <dropDefaultValue tableName="patient_follow_up"
                      columnName="created_date"
                      columnDataType="timestamp"/>
  </changeSet>

</databaseChangeLog>
