    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="00000000000009" author="hanan">

    <createTable tableName="screen_authority">
      <column name="screen" type="varchar(100)">
        <constraints nullable="false"/>
      </column>

      <column name="authority_name" type="varchar(50)">
        <constraints nullable="false"/>
      </column>

      <column name="operation" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey tableName="screen_authority"
                   columnNames="screen, authority_name, operation"
                   constraintName="pk_screen_auth"/>

    <addForeignKeyConstraint baseTableName="screen_authority"
                             baseColumnNames="authority_name"
                             referencedTableName="authority"
                             referencedColumnNames="name"
                             constraintName="fk_screen_auth_authority"
                             />
