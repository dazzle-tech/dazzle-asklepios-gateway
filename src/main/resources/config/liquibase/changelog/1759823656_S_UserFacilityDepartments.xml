<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="10000000000019" author="Sondos">

    <createTable tableName="user_facility_departments">
      <column name="id" type="bigint" autoIncrement="true" startWith="1" incrementBy="1">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="user_id" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="department_id" type="bigint">
        <constraints nullable="false"/>
      </column>

      <column name="created_by" type="varchar(50)"/>
      <column name="created_date" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="last_modified_by" type="varchar(50)"/>
      <column name="last_modified_date" type="timestamp"/>
      <column name="is_active" type="boolean" defaultValueBoolean="true">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Foreign Keys -->
    <addForeignKeyConstraint
      baseTableName="user_facility_departments"
      baseColumnNames="user_id"
      referencedTableName="app_user"
      referencedColumnNames="id"
      constraintName="fk_user_facility_departments_user"/>

    <addForeignKeyConstraint
      baseTableName="user_facility_departments"
      baseColumnNames="department_id"
      referencedTableName="department"
      referencedColumnNames="id"
      constraintName="fk_user_facility_departments_department"/>

    <!-- Unique combination -->
    <addUniqueConstraint
      tableName="user_facility_departments"
      columnNames="user_id, department_id"
      constraintName="uq_user_facility_departments_combination"/>

    <!-- Indexes -->
    <createIndex indexName="idx_user_facility_departments_user_id" tableName="user_facility_departments">
      <column name="user_id"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>
