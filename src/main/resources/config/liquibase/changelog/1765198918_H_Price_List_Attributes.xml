<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <!-- Price List Items (no read-only columns stored) -->
  <changeSet id="H000000000000PriceListAttributes" author="hanan253yahya">

    <createTable tableName="price_list_attributes">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="price_list_id" type="bigint">
        <constraints nullable="false"/>
      </column>


      <column name="attribute_type" type="varchar(40)">
        <constraints nullable="false"/>
      </column>

      <column name="attribute" type="varchar(50)">
        <constraints nullable="false"/>
      </column>




      <column name="price" type="decimal(19,4)">
        <constraints nullable="false"/>
      </column>



      <!-- Deactivate only -->
      <column name="is_active" type="boolean" defaultValueBoolean="true">

      </column>


    </createTable>

    <!-- FK: price_list -->
    <addForeignKeyConstraint baseTableName="price_list_attributes"
                             baseColumnNames="price_list_id"
                             referencedTableName="price_list"
                             referencedColumnNames="id"
                             constraintName="fk_price_list_attribute_price_list"/>




  </changeSet>

</databaseChangeLog>
